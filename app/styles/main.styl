html,
body
    margin 0
    padding 0
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Helvetica, Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol"
    width: 100%
    height: 100%

#app,
.container
    width: 100%
    height: 100%

.container
    display: grid
    grid-template-columns: auto
    grid-template-rows: 40px auto 50px
    grid-template-areas:
        "header"
        "main"
        "footer"
